@{
    ViewBag.Title = "Transfer04";
    Layout = "~/Views/Shared/_Master_Page.cshtml";
}
<link href="~/Content/Css/Style_MaterPage.css" rel="stylesheet" />
<script src="~/Content/JavaScript/JavaScript.js"></script>
<div class="ask_from02">
    <div class="ask_from_system">
        CASH TRANSFER
    </div>
    <div class="ask_from_system_detail02" style="height:50px;">
        Enter amont
        <p style="font-size:20px; color:red;">@ViewBag.err</p>
    </div>
</div>
<div class="function">
    @using (Html.BeginForm("Transfer04", "CashTranfer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table class="functiontable" border="0">
            <tr>
                <td colspan="2">
                    <ul>
                        <li>
                            <input type="text" onclick="displayTable()" name="txtAmount" id="idPIN" style="width: 300px; height: 40px; margin-left: 350px !important;" readonly />
                        </li>
                        <li>
                            <input class="clear-text" onclick="Clear(); disableTable()" type="button" value="" style="width: 44px !important; height: 44px !important;" />
                        </li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td class="key-board" rowspan="3">
                    <table id="keyboard" border="0">
                        <tr>
                            <td>
                                <input type="button" class="number" value="7" onclick="Add(7)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="8" onclick="Add(8)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="9" onclick="Add(9)" />
                            </td>
                            <td rowspan="3">
                                <input type="button" class="number" value="0" onclick="Add(0)" style="height:188px !important;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="button" class="number" value="4" onclick="Add(4)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="5" onclick="Add(5)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="6" onclick="Add(6)" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="button" class="number" value="1" onclick="Add(1)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="2" onclick="Add(2)" />
                            </td>
                            <td>
                                <input type="button" class="number" value="3" onclick="Add(3)" />
                            </td>
                        </tr>
                    </table>
                </td>

                <td class="right-key-ok-cancel">
                    <a href="Transfer05">
                        <input type="submit" value="Enter" style="float: right !important; height: 50px !important; width: 150px !important; margin-right: 50px; background-color: #2980B9; color: #fff; font-size: 20px; font-weight: bold;">
                    </a>
                    <br />
                    <br />
                    <br />
                    <br />
                    <a href="Transfer03">
                        <input type="button" value="Cancel">
                    </a>
                </td>

            </tr>

        </table>
    }
</div>
